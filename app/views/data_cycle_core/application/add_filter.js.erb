$('<%= j render_advanced_filter_partial({
          filter_title: @params[:n],
          filter_name: @params[:n].presence&.parameterize(separator: '_'),
          filter_method: @params[:m],
          filter_advanced_type: @params[:q],
          filter_type: @params[:t],
          filter_buttons: true,
          value: nil,
          identifier: @identifier }) %>').hide().insertBefore('.filters .advanced-filters > .accordion-item > .accordion-content > .add-advanced-filter-container').slideDown('fast').trigger('dc:html:changed').trigger('dc:html:initialized');

$('.filters #add_advanced_filter').data('index', $('.filters #add_advanced_filter').data('index') + 1);
