<span class="tag-group tags <%= key %> <%= local_assigns[:filter_method] || 'i' %> <%= local_assigns[:container_classes] %>" data-id="<%= target %>">
  <span class="tag-group-label">
    <i class="fa fa-user" aria-hidden="true"></i>
    <%= t("filter.#{key}", default: title, locale: active_ui_locale) %>:
  </span>

  <% creators = DataCycleCore::User.where(id: value).map { |c| [c.id, { title: c.email, text: c.try(:full_name) }] }.to_h %>

  <span class="tags-container">
    <% value.each do |creator_id| %>
      <span class="tag" title="<%= creators.dig(creator_id, :title) %>"><%= creators.dig(creator_id, :text) %></span>
    <% end %>
  </span>

