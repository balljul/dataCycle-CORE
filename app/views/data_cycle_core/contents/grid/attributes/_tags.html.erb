<div class="tags">
  <ul class="no-bullet no-format">
    <% item.display_classification_aliases(local_assigns[:classification_tree_visibility] || 'tile').each do |classification_alias| %>
      <li class="tag <%= 'mapped' unless item.assigned_classification_aliases.include?(classification_alias) %>"
          data-dc-tooltip="<%= classification_tooltip(classification_alias) %>">
        <%= classification_alias.internal_name %>
      </li>
    <% end %>
  </ul>
</div>
