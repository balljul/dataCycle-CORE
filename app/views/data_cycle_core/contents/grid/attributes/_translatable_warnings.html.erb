<div class="translatable-field-container">
  <% I18n.available_locales.each do |a_locale| %>
    <span class="translatable-field linked-content-warnings remote-render <%= a_locale.to_s %> <%= 'active' if locale == a_locale %>"
      data-remote-path="data_cycle_core/contents/grid/attributes/warnings"
      data-remote-options="<%= to_query_params({ content: content, locale: a_locale }).to_json %>">
    </span>
  <% end %>
</div>
