<%= render 'data_cycle_core/contents/viewers/attribute',
      local_assigns.merge(data_attributes: {
        id: Array(value).map(&:id),
        editor: "asset_selector"
      }) do %>

  <% value = Array(value) %>
  <% value = new_relation(options.dig(:item_diff), 'assets').to_a if change_by_mode(options.dig(:item_diff), '+').present? %>

  <%= render 'data_cycle_core/assets/asset_list', assets: value %>

<% end %>
