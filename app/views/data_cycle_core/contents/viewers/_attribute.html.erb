<% if attribute_value_present?(value) || options.dig(:force_render).to_s == 'true' || value.is_a?(FalseClass) %>

  <%= tag.div(class: attribute_viewer_html_classes(**local_assigns), data: attribute_viewer_data_attributes(**local_assigns)) do %>

    <%= attribute_viewer_label_tag(**local_assigns) if options.dig(:hide_label).blank? %>

    <%= yield %>

  <% end %>

<% end %>
